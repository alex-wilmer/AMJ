@import 'nib'
@import 'rupture'

mainBlue = #1B9EDA
maxWidth = 1024px

.max
  max-width maxWidth
  margin 0 auto

global-reset()

*
  box-sizing border-box

html,
body
  height 100%
  font-family 'Roboto', sans-serif

body
  background mainBlue
  overflow-x hidden

.cubes
  position absolute
  top 20px
  right 20px

  +above(600px)
    max-width 600px

main
  height 100%
  padding 20px

  & > div
    height 100%

  .logo
    position relative
    z-index 1
    top 50%
    transform translateY(-50%)
    width 60vw

    +above(400px)
      width 240px

.card-2
  background white

footer
  background white
  text-align center

  .slogan
    color #939598
    word-spacing 1.1em
    font-size 0.9em
    padding 15px

    .text
      position relative
      top -10px

    .logo
      height 40px
      margin-left 15px
